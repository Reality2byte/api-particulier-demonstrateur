{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/app/*": ["./app/*"],
      "@/i18n/*": ["i18n/*"]
    },
    "strictNullChecks": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "extends": "tsconfig/nextjs.json",
  "include": [
    "next-env.d.ts",
    "next-api-request.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "i18n/index.js",
    "middleware.js"
  ],
  "exclude": ["node_modules"]
}
